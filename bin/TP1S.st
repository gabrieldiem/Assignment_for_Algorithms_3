Object subclass: #AlgoPenales	instanceVariableNames: 'equipos'	classVariableNames: ''	package: 'TP1S'!!AlgoPenales methodsFor: 'initialization' stamp: 'GabrielDiem 9/22/2022 17:06'!initialize	equipos := OrderedCollection new.! !!AlgoPenales methodsFor: 'public' stamp: 'GabrielDiem 9/22/2022 17:55'!elegirPateadorDe: nombreEquipo	^ (self equipoDeNombre: nombreEquipo) elegirPateador.! !!AlgoPenales methodsFor: 'public' stamp: 'GabrielDiem 9/26/2022 23:19'!registrarJugadorTitular: nombreJugador para: nombreEquipo conHabilidad: puntajeHabilidad conCansancio: puntajeCansancio conExperiencia: puntajeExperiencia	|equipoBuscado|	equipoBuscado := self equipoDeNombre: nombreEquipo.	equipoBuscado registrarJugadorTitular: nombreJugador conHabilidad: puntajeHabilidad conCansancio: puntajeCansancio conExperiencia: puntajeExperiencia.! !!AlgoPenales methodsFor: 'public' stamp: 'GabrielDiem 9/28/2022 10:38'!conPartido: unPartido	| unPartidoCortado |	unPartidoCortado := unPartido splitOn: ' - '.	(self partidoEsValido: unPartidoCortado) ifFalse: [ InputPartidoInvalido new signal ].	equipos add: (Equipo conNombre: unPartidoCortado first).	equipos add: (Equipo conNombre: unPartidoCortado last).! !!AlgoPenales methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 17:00'!registrarJugadorSuplente: nombreJugador para: nombreEquipo conHabilidad: puntajeHabilidad conCalidadDeSuplente: puntajeSuplente conExperiencia: puntajeExperiencia	|equipoBuscado|	equipoBuscado := self equipoDeNombre: nombreEquipo.	equipoBuscado registrarJugadorSuplente: nombreJugador conHabilidad: puntajeHabilidad conCalidadDeSuplente: puntajeSuplente conExperiencia: puntajeExperiencia.! !!AlgoPenales methodsFor: 'private' stamp: 'GabrielDiem 9/28/2022 10:39'!partidoEsValido: unPartidoCortado	^ (unPartidoCortado size = 2).! !!AlgoPenales methodsFor: 'private' stamp: 'GabrielDiem 9/28/2022 09:53'!equipoDeNombre: nombreEquipo	^ equipos detect: [ :equipo | equipo esNombre: nombreEquipo ] ifNone: [ EquipoNoExiste new signal ].! !!AlgoPenales methodsFor: 'private' stamp: 'GabrielDiem 9/27/2022 16:00'!conPartido: unPartido yGanando: nombreEquipo	self conPartido: unPartido.	(self equipoDeNombre: nombreEquipo) estaGanando.! !!AlgoPenales methodsFor: 'private' stamp: 'GabrielDiem 9/27/2022 15:58'!conPartido: unPartido yPerdiendo: nombreEquipo	self conPartido: unPartido.	(self equipoDeNombre: nombreEquipo) estaPerdiendo.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!AlgoPenales class	instanceVariableNames: ''!!AlgoPenales class methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 16:01'!conPartido: unPartido yGanando: nombreEquipo	^ (self new conPartido: unPartido yGanando: nombreEquipo).! !!AlgoPenales class methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 09:53'!conPartido: unPartido	^ (self new conPartido: unPartido).! !!AlgoPenales class methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 16:02'!conPartido: unPartido yPerdiendo: nombreEquipo	^ (self new conPartido: unPartido yPerdiendo: nombreEquipo).! !Object subclass: #Equipo	instanceVariableNames: 'nombre jugadores moral'	classVariableNames: ''	package: 'TP1S'!!Equipo methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 16:50'!initialize	jugadores := OrderedCollection new.	moral := Moral new.! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/22/2022 17:40'!esNombre: unNombre	^ nombre = unNombre.! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 17:05'!registrarJugadorTitular: nombreJugador conHabilidad: puntajeHabilidad conCansancio: puntajeCansancio conExperiencia: puntajeExperiencia	|modificadores|	modificadores := self modificadoresParaRegistrarJugadorConExperiencia: puntajeExperiencia conMoral: moral.	jugadores add: (JugadorTitular conNombre: nombreJugador conHabilidad: puntajeHabilidad conCansancio: puntajeCansancio conModificadores: modificadores).! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 16:21'!estaGanando	moral subir.! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 16:20'!estaPerdiendo	moral bajar.! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 18:04'!registrarJugadorSuplente: nombreJugador conHabilidad: puntajeHabilidad conCalidadDeSuplente: puntajeSuplente conExperiencia: puntajeExperiencia	|modificadores|	modificadores := self modificadoresParaRegistrarJugadorConExperiencia: puntajeExperiencia conMoral: moral.	jugadores add: (JugadorSuplente conNombre: nombreJugador conHabilidad: puntajeHabilidad conCalidadDeSuplente: puntajeSuplente conModificadores: modificadores).! !!Equipo methodsFor: 'public' stamp: 'GabrielDiem 9/28/2022 10:05'!elegirPateador	| mejorJugador |	jugadores ifEmpty: [ NoHayJugadoresRegistrados new signal ].	mejorJugador  := jugadores first.	jugadores do: [ :jugador | (mejorJugador esMejorQue: jugador) ifFalse: [ mejorJugador := jugador ] ].	^ mejorJugador nombre.! !!Equipo methodsFor: 'private' stamp: 'GabrielDiem 9/22/2022 17:08'!conNombre: nombreEquipo	nombre := nombreEquipo.! !!Equipo methodsFor: 'private' stamp: 'GabrielDiem 9/27/2022 17:03'!modificadoresParaRegistrarJugadorConExperiencia: aniosExperiencia conMoral: unaMoral	|modificadores|	modificadores := OrderedCollection new.	modificadores add: (Experiencia conAnios: aniosExperiencia); add: unaMoral.	^ modificadores.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Equipo class	instanceVariableNames: ''!!Equipo class methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 16:02'!conNombre: nombreEquipo	^ (self new conNombre: nombreEquipo).! !Error subclass: #EquipoNoExiste	instanceVariableNames: ''	classVariableNames: ''	package: 'TP1S'!Object subclass: #Experiencia	instanceVariableNames: 'aniosDeExperiencia aniosParaSerExperimentado coeficientePorSerExperimentado'	classVariableNames: ''	package: 'TP1S'!!Experiencia methodsFor: 'private' stamp: 'GabrielDiem 9/27/2022 00:19'!conAnios: unosAnios	aniosDeExperiencia := unosAnios.! !!Experiencia methodsFor: 'public' stamp: 'GabrielDiem 9/28/2022 09:32'!aplicarModificador: puntaje	| aniosDondeEsNoExperimentado |	aniosDondeEsNoExperimentado := OrderedCollection new.	1 to: aniosParaSerExperimentado do: [ :i | aniosDondeEsNoExperimentado add: i ].		aniosDondeEsNoExperimentado detect: [ :unAnio | unAnio = aniosDeExperiencia  ] ifFound: [ puntaje contents: (coeficientePorSerExperimentado * puntaje contents)].! !!Experiencia methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 00:19'!initialize	aniosParaSerExperimentado := 2.	coeficientePorSerExperimentado := 0.5.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Experiencia class	instanceVariableNames: ''!!Experiencia class methodsFor: 'initialization' stamp: 'GabrielDiem 9/27/2022 16:02'!conAnios: unosAnios	^ (self new conAnios: unosAnios).! !Error subclass: #InputPartidoInvalido	instanceVariableNames: ''	classVariableNames: ''	package: 'TP1S'!Object subclass: #Jugador	instanceVariableNames: 'nombre habilidad exponenteBaseHabilidad modificadores'	classVariableNames: ''	package: 'TP1S'!!Jugador methodsFor: 'initialization' stamp: 'GabrielDiem 9/28/2022 09:45'!initialize	exponenteBaseHabilidad := 2.! !!Jugador methodsFor: 'private' stamp: 'GabrielDiem 9/27/2022 18:10'!aplicarModificadores: calificacion	modificadores do: [ :modificador | modificador aplicarModificador: calificacion ].! !!Jugador methodsFor: 'public' stamp: 'GabrielDiem 9/27/2022 15:47'!esMejorQue: otroJugador	^ (self calificacionParaPatear > otroJugador calificacionParaPatear).! !!Jugador methodsFor: 'public' stamp: 'GabrielDiem 9/22/2022 18:04'!nombre	^ nombre.! !!Jugador methodsFor: 'public' stamp: 'GabrielDiem 9/29/2022 23:40'!calificacionParaPatear	self subclassResponsibility.! !Jugador subclass: #JugadorSuplente	instanceVariableNames: 'calidadDeSuplente'	classVariableNames: 